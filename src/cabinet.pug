extends pug/base

append vars
	//- ...

block content
	.wrapper
		include pug/header
		nav.nav.hidden-md
			.container
				ul.nav__menu
					li
						a(href="#") Производители 
					li
						a(href="#") О компании 
					li
						a(href="#") Новости
					li
						a(href="#") Контакты
		.content
			.container
				.row.no-gutters.justify-content-between
					.sidebar.sidebar--inner
						.sidebar__nav
							.sidebar__btn.sidebar__btn--inner Каталог запчастей
							.sidebar__nav__content.sidebar__nav__content--inner
								ul.sidebar__menu
									li
										a(href="#") CANDY TRIO
									li
										a(href="#") Электрические водонагреватели
								.sidebar__title Бренды
								ul.sidebar__menu
									li
										a(href="#") Aquatek
									li
										a(href="#") Ariston
									li
										a(href="#") ASKO
								.sidebar__link 
									a(href="#") Показать все бренды
				.content-wrapp
					ul.breadcrumb
						li
							a(href="#").middle Главная
							span.middle.breadcrumb__delimiter
								i.zmdi.zmdi-arrow-right
						li
							| Личный кабинет
					h2.item-title.page-title Личный кабинет
					.profile.row.no-gutters.align-items-center
						.profile__icon
							img(src="images/svg/user.svg", width="30" alt="")
						.profile__info
							.profile__name
								a(href="#") Судьин Дмитрий
							a(href="#").profile__btn
								span.middle.profile__btn__icon
									img(src="images/svg/exit_right_arrow.svg", width="15" alt="")
								span.middle.profile__btn__text Выйти
					.profile-nav.row
						.col-md-4
							a(href="#")
								.profile-nav__item
									.profile-nav__icon
										img(src="images/svg/list.svg", width="40" alt="")
									.profile-nav__title Текущие заказы
						.col-md-4
							a(href="#")
								.profile-nav__item
									.profile-nav__icon
										img(src="images/svg/resume.svg", width="40" alt="")
									.profile-nav__title Личные данные
						.col-md-4
							a(href="#")
								.profile-nav__item
									.profile-nav__icon
										img(src="images/svg/history_of_orders.svg", width="44" alt="")
									.profile-nav__title История заказов
						.col-md-4
							a(href="#")
								.profile-nav__item
									.profile-nav__icon
										img(src="images/svg/cart.svg", width="52" alt="")
									.profile-nav__title Корзина
						.col-md-4
							a(href="#")
								.profile-nav__item
									.profile-nav__icon
										img(src="images/svg/phone_book.svg", width="40" alt="")
									.profile-nav__title Контакты

	include pug/footer
	include pug/modals